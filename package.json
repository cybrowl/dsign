{
	"private": true,
	"name": "dsign",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"build:css": "tailwindcss build src/ui/app.css -o src/ui/assets/output.css",
		"build": "npm run build:css && vite build",
		"boot": "sh ./scripts/install-local.sh",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"idl_for_testing": "bash ./canister_refs/convert_idl_for_testing.sh",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"logs": "npm run idl_for_testing && tape test-utils/debug/debug.test.cjs",
		"deploy": "sh ./scripts/deploy_local.sh",
		"test-all": "bash ./scripts/test-all.sh",
		"test-config": "tape test_e2e/dfx.config.test.cjs",
		"test-pc": "npm run idl_for_testing && tape test_e2e/profile_creation.test.cjs",
		"test-pi": "npm run idl_for_testing && tape test_e2e/profile_images.test.cjs"
	},
	"dependencies": {
		"crc-32": "^1.2.2",
		"dotenv": "^16.0.3",
		"dsign-components": "1.9.4",
		"lodash": "^4.17.21",
		"luxon": "^3.2.1",
		"svelte-local-storage-store": "0.6.0"
	},
	"devDependencies": {
		"@dfinity/agent": "0.15.6",
		"@dfinity/auth-client": "0.15.6",
		"@dfinity/candid": "0.15.6",
		"@dfinity/identity": "0.15.6",
		"@dfinity/principal": "0.15.6",
		"@sveltejs/adapter-static": "3.0.1",
		"@sveltejs/kit": "2.4.3",
		"autoprefixer": "10.4.17",
		"fake-words": "0.5.3",
		"mime": "^4.0.1",
		"postcss": "8.4.33",
		"postcss-load-config": "5.0.2",
		"prettier": "3.2.4",
		"prettier-plugin-motoko": "0.8.2",
		"prettier-plugin-svelte": "3.1.2",
		"svelte-preprocess": "5.1.3",
		"tailwindcss": "3.4.1",
		"tap-nyan": "1.1.0",
		"tape": "5.6.1",
		"uuid": "9.0.0",
		"vite": "5.0.12"
	}
}
