{
	"private": true,
	"name": "dsign",
	"version": "0.9.1",
	"type": "module",
	"scripts": {
		"build:css": "tailwindcss build src/dsign_assets/app.css -o src/dsign_assets/assets/output.css",
		"build": "npm run build:css && vite build",
		"boot": "sh ./scripts/install-local.sh",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"generate_test_interface": "bash ./scripts/generate_can_test_interface.sh",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"logs": "npm run generate_test_interface && tape test-utils/debug/debug.test.cjs",
		"deploy_favorites": "sh ./scripts/deploy/favorites.sh && node ./scripts/deploy/favorites.cjs",
		"deploy_profile": "sh ./scripts/deploy/profile.sh && node ./scripts/deploy/profile.cjs",
		"deploy_projects": "sh ./scripts/deploy/projects.sh && node ./scripts/deploy/projects.cjs",
		"deploy_snaps": "sh ./scripts/deploy/snaps.sh && node ./scripts/deploy/snaps.cjs",
		"deploy_v2": "sh ./scripts/setup_local.sh",
		"user_interface": "sh ./scripts/deploy/user_interface.sh",
		"deploy_all": "npm run deploy_favorites && npm run deploy_profile && npm run deploy_projects && npm run deploy_snaps && npm run user_interface",
		"test-all": "bash ./scripts/test-all.sh",
		"test-config": "tape test-env/dfx.config.test.cjs",
		"test-ac": "npm run generate_test_interface && tape test-canisters/account_creation.test.cjs",
		"test-cl": "npm run generate_test_interface && tape test-canisters/canister_ids_ledger.test.cjs",
		"test-ex": "npm run generate_test_interface && tape test-canisters/explore.test.cjs",
		"test-lg": "npm run generate_test_interface && tape test-canisters/logger.test.cjs",
		"test-sm": "npm run generate_test_interface && tape test-canisters/snap_main.test.cjs",
		"test-p": "npm run generate_test_interface && tape test-canisters/profile.test.cjs",
		"test-pm": "npm run generate_test_interface && tape test-canisters/project_main.test.cjs",
		"test-pt": "npm run generate_test_interface && tape test-canisters/project_topic.test.cjs",
		"test-pc": "npm run generate_test_interface && tape test_e2e/profile_creation.test.cjs"
	},
	"dependencies": {
		"dotenv": "^16.0.3",
		"dsign-components": "^1.9.1",
		"lodash": "^4.17.21",
		"luxon": "^3.2.1",
		"svelte-local-storage-store": "0.6.0"
	},
	"devDependencies": {
		"@dfinity/agent": "0.15.6",
		"@dfinity/auth-client": "0.15.6",
		"@dfinity/candid": "0.15.6",
		"@dfinity/identity": "0.15.6",
		"@dfinity/principal": "0.15.6",
		"@sveltejs/adapter-static": "3.0.1",
		"@sveltejs/kit": "2.4.3",
		"autoprefixer": "10.4.17",
		"fake-words": "0.5.3",
		"postcss": "8.4.33",
		"postcss-load-config": "5.0.2",
		"prettier": "3.2.4",
		"prettier-plugin-motoko": "0.8.2",
		"prettier-plugin-svelte": "3.1.2",
		"svelte-preprocess": "5.1.3",
		"tailwindcss": "3.4.1",
		"tap-nyan": "1.1.0",
		"tape": "5.6.1",
		"uuid": "9.0.0",
		"vite": "5.0.12"
	}
}
