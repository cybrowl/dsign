{
	"private": true,
	"name": "dsign",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"build:css": "tailwindcss build src/ui/app.css -o src/ui/assets/output.css",
		"build": "npm run build:css && vite build",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"logs": "",
		"boot": "sh ./scripts/deploy_local.sh",
		"deploy": "sh ./scripts/deploy_prod.sh",
		"registry": "sh ./scripts/registry.sh",
		"deploy:children": "node ./scripts/deploy_children.js",
		"test": "vitest run",
		"test:config": "vitest test_e2e/dfx.config.test.js",
		"test:profile_create": "vitest test_e2e/profile_creation.test.js",
		"test:profile_images": "vitest test_e2e/profile_images.test.js",
		"test:projects_with_snaps": "vitest test_e2e/projects_with_snaps.test.js",
		"test:projects_without_snaps": "vitest test_e2e/projects_without_snaps.test.js",
		"test:feedback": "vitest test_pocket/feedback.test.js",
		"test:favorites": "vitest test_pocket/favorites.test.js"
	},
	"dependencies": {
		"crc-32": "^1.2.2",
		"dotenv": "^16.0.3",
		"dsign-components": "^1.10.27",
		"lodash": "^4.17.21",
		"luxon": "^3.2.1"
	},
	"devDependencies": {
		"@dfinity/agent": "1.1.0",
		"@dfinity/auth-client": "1.1.0",
		"@dfinity/candid": "1.1.0",
		"@dfinity/identity": "1.1.0",
		"@dfinity/principal": "1.1.0",
		"@hadronous/pic": "^0.6.1",
		"@sveltejs/adapter-static": "3.0.1",
		"@sveltejs/kit": "2.4.3",
		"autoprefixer": "10.4.17",
		"fake-words": "0.5.3",
		"postcss": "8.4.33",
		"postcss-load-config": "5.0.2",
		"prettier": "3.2.4",
		"prettier-plugin-motoko": "0.8.2",
		"prettier-plugin-svelte": "3.1.2",
		"svelte-preprocess": "5.1.3",
		"tailwindcss": "3.4.1",
		"uuid": "9.0.0",
		"vite": "5.0.12",
		"vitest": "^1.3.1"
	}
}
